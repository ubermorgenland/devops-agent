{
  "id": "07",
  "name": "list_files",
  "description": "List files in directory using command",
  "category": "commands",

  "setup": {
    "env_vars": {},
    "files": {
      "a.txt": "file a",
      "b.txt": "file b",
      "c.log": "log file"
    }
  },

  "instruction": "List all .txt files in the current directory",
  "max_steps": 3,

  "assertions": [
    {
      "type": "tool_called",
      "tool": "bash"
    },
    {
      "type": "final_answer_contains",
      "values": ["a.txt", "b.txt"],
      "case_sensitive": false
    },
    {
      "type": "completed_successfully"
    }
  ]
}
