{
  "id": "04",
  "name": "create_file_from_env",
  "description": "Create file using content from environment variable",
  "category": "file_ops",

  "setup": {
    "env_vars": {
      "DOCKER_USER": "testuser"
    },
    "files": {}
  },

  "instruction": "Read the DOCKER_USER environment variable and create a file config.txt containing 'User: <value>'",
  "max_steps": 4,

  "assertions": [
    {
      "type": "tool_called",
      "tool": "get_env",
      "args": {"key": "DOCKER_USER"}
    },
    {
      "type": "tool_called",
      "tool": "write_file",
      "args": {"path": "config.txt"}
    },
    {
      "type": "file_exists",
      "path": "config.txt"
    },
    {
      "type": "file_content_contains",
      "path": "config.txt",
      "values": ["User:", "testuser"],
      "case_sensitive": false
    },
    {
      "type": "completed_successfully"
    }
  ]
}
